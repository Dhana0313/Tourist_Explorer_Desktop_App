<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="720" prefWidth="1280" style="-fx-background-color: linear-gradient(to bottom right, #56CCF2, #2F80ED); -fx-padding: 30;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.tourist_explorer.controllers.LoginController">

    <VBox alignment="CENTER" layoutX="25" layoutY="50" prefWidth="450" spacing="20">

        <!-- Logo or image -->
        <ImageView fitHeight="150" fitWidth="150">
            <image>
                <Image preserveRatio="true" url="@../images/image2.jpg" />
            </image>
        </ImageView>

        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" text="Welcome Back to Boat Booking" />

        <VBox spacing="15">
            <TextField fx:id="usernameField" promptText="Username" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 10; -fx-padding: 10;" />
        </VBox>

        <Button onAction="#handleLogin" style="-fx-background-color: #27ae60; -fx-background-radius: 20; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 40;" text="Login" />

        <Hyperlink onAction="#goToSignup" style="-fx-text-fill: white; -fx-underline: false;" text="Don't have an account? Sign up" />
    </VBox>
</AnchorPane>
