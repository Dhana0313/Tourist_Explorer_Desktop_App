<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.tourist_explorer.MainDashboardController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #f0f4f8;">

    <!-- Top bar -->
    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-background-color: #2980b9; -fx-padding: 10;">
            <Label text="Boat Booking Dashboard" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;" HBox.hgrow="ALWAYS"/>
            <Button text="Logout"  style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 5 15;"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="15" alignment="TOP_LEFT" prefWidth="200" style="-fx-background-color: #34495e; -fx-padding: 20;">
            <Button text="Dashboard"  style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
            <Button text="My Bookings"  style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
            <Button text="Profile"  style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
            <Button text="Settings"  style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
        </VBox>
    </left>

    <!-- Main content area -->
    <center>
        <StackPane fx:id="mainContent" style="-fx-background-color: white; -fx-padding: 20;">
            <!-- Load your views here dynamically -->
            <Label text="Welcome to the Dashboard!" style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;"/>
        </StackPane>
    </center>

</BorderPane>
