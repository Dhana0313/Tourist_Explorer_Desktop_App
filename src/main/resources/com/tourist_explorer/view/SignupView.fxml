<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720" prefWidth="1280" style="-fx-background-color: linear-gradient(to bottom right, #56CCF2, #2F80ED); -fx-padding: 30;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.tourist_explorer.controllers.SignupController">

    <Button mnemonicParsing="false" onAction="#goBackContent" style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 15; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-border-color: rgba(255, 255, 255, 0.4); -fx-border-radius: 15; -fx-border-width: 1; -fx-cursor: hand;" text="â† Back" AnchorPane.leftAnchor="350" AnchorPane.topAnchor="0" />

    <VBox alignment="CENTER" layoutX="500" layoutY="55.0" prefHeight="650.0" prefWidth="450.0" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-background-radius: 20; -fx-padding: 40 50; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 0);" >

        <!-- Logo or image -->
        <ImageView fitHeight="120" fitWidth="120">
            <image>
                <Image preserveRatio="true" url="@../images/login.jpeg" />
            </image>
        </ImageView>

        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" text="Create Your Boat Booking Account" />

        <VBox spacing="15">
            <TextField fx:id="fullNameField" promptText="Full Name" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <TextField fx:id="usernameField" promptText="Username" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <TextField fx:id="emailField" promptText="Email" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-background-radius: 10; -fx-padding: 10;" />
        </VBox>

        <Button onAction="#handleSignup" style="-fx-background-color: #27ae60; -fx-background-radius: 20; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 40;" text="Sign Up" />

        <Hyperlink onAction="#goToLogin" style="-fx-text-fill: white; -fx-underline: false;" text="Already have an account? Log in" />
    </VBox>

</AnchorPane>
